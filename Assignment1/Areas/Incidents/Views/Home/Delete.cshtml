@model Assignment1.Models.Incidents

@{
    string title = ViewBag.Action + " Incident";
    ViewBag.Title = title;
}

<h2>@title</h2>
<p class="text-danger">Do you really want to delete: </p>
<form method="post">
    
    <div class="row">
        <div class="col-8">
            <input type="hidden" asp-for="IncidentsId" />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CustomersId">Customer</label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Customers.FullName" class="form-control" readonly />
                    
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductsId">Products</label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Product.PName" class="form-control" readonly />
                    <input type="hidden" asp-for="Product.Code" />
                    <input type="hidden" asp-for="Product.Price" />
                    
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Title">Title</label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Title" class="form-control" readonly />

                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description">Description</label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Description" class="form-control" readonly />

                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TechniciansId">Technician</label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Technician.TName" class="form-control" readonly />
                    <input type="hidden" asp-for="Technician.Email" />
                    <input type="hidden" asp-for="Technician.Phone" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DateAdded">Day Open</label>

                </div>
                <div class="col-8">
                    <input type="text" asp-for="DateAdded" class="form-control" readonly />
                    <span asp-validation-for="DateAdded" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DateClosed">Day Close</label>

                </div>
                <div class="col-8">
                    <input type="text" asp-for="DateClosed" class="form-control" readonly />
                    <span asp-validation-for="DateClosed" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <table class="col-8 offset-4 row">
                        <tr class=" col">

                            <td> <input type="submit" class="btn btn-outline-danger w=100 text-right" value="Delete" /></td>
                            <td><a asp-action="Index" class="btn btn-outline-success w=140 text-right"> Cancel</a></td>

                        </tr>
                    </table>
                </div>
            </div>


        </div>
    </div>


</form>
