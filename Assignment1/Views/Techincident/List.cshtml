@using Microsoft.AspNetCore.Http
@model IEnumerable<Assignment1.Models.Incidents>
@{
    ViewData["Title"] = "List Incidents for Technician";
    
}
@section header{
    <div class="Incidents-container p-3">
        <div class="box">
            <span></span>
            <div class="content">
                <h2>@ViewBag.name</h2>
                <p>@ViewBag.announcement</p>
                <h2>Assigned/Open Incidents</h2>
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" table-striped style="width:100%">
                        <thead>
                            <tr>
                                <th><p>TITLE</p></th>
                                <th><p>CUSTOMER</p></th>
                                <th><p>PRODUCT</p></th>
                                <th><p>DAY OPENED</p></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td class=" text-center">@obj.Title</td>
                                    <td class=" text-center">@obj.Customers.FullName</td>
                                    <td class=" text-center">@obj.Product.PName</td>
                                    <td class=" text-center">@obj.DateAdded.ToShortDateString()</td>
                                    <td class=" text-center">
                                        <div>
                                            <a asp-route-Id="@obj.IncidentsId" asp-action="Edit" class="btn btn-outline-primary">Edit</a>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <div class="col-6 ">
                    <a asp-action="Get" class="btn btn-success">
                        Switch Technician
                    </a>
                </div>
            </div>
        </div>
    </div>


}