@model Assignment1.Models.Incidents
@{
    string title = "Edit Incidents";
}
@section header{

    <h2>@title</h2>

    <form method="post">
        <!--This line for validation after put [required] in Category controller-->
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="IncidentsId" class="form-control" />
        <input type="hidden" asp-for="CustomersId" class="form-control" />
        <input type="hidden" asp-for="Product.ProductsId" class="form-control" />
        <input type="hidden" asp-for="Technician.TechniciansId" class="form-control" />
        <input type="hidden" asp-for="Technician.Email" class="form-control" />
        <input type="hidden" asp-for="Technician.Phone" class="form-control" />
        <input type="hidden" asp-for="Product.Code" class="form-control" />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Technician.TechniciansId">Technician</label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="Technician.TName" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Customer</label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="Customers.FullName" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ProductsId">Products</label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="Product.PName" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Title</label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="Title" class="form-control" readonly />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DateAdded">Day Open</label>

                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="DateAdded" class="form-control" readonly />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Description</label>
                    </div>
                    <div class="col-8">
                        <textarea class="form-control" cols="20" asp-for="Description" rows="4"></textarea>

                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DateClosed">Day Close</label>

                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="DateClosed" class="form-control" />
                        <span asp-validation-for="DateClosed" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <table class="col-8 offset-4 row">
                            <tr class=" col">

                                <td> <input type="submit" class="btn btn-outline-info w=100 text-right" value="Save" /></td>
                                <td><a asp-action="List" asp-route-Id="@Model.TechniciansId" class="btn btn-outline-success w=140 text-right"> Cancel</a></td>

                            </tr>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </form>

}