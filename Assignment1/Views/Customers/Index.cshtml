
@model IEnumerable<Assignment1.Models.Customers>
@{
    ViewData["Title"] = "Customer";
}
@section header{
    <div class="customer-container p-3">
        <div class="box">
            <span></span>
            <div class="content">
                <h2> Customer Manager</h2>
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" table-striped style="width:100%">
                        <thead>
                            <tr>
                                <th><p>NAME</p></th>
                                <th><p>EMAIL</p></th>
                                <th><p>CITY</p></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.FirstName @obj.LastName</td>
                                    <td>@obj.Email</td>
                                    <td>@obj.City</td>
                                    <td class=" text-center">
                                        <div class="btnCon">
                                            <a asp-controller="Customers" asp-route-Id="@obj.CustomersId" asp-action="Edit" class="btn btn-outline-primary">Edit</a>
                                        </div>
                                    </td>
                                    <td class=" text-center">
                                        <div class="btnCon">

                                            <a asp-controller="Customers" asp-route-Id="@obj.CustomersId" asp-action="Delete" class="btn btn-outline-danger">Delete</a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-6 btnCon">
                        <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-success">
                            Add Customer
                        </a>
                    </div>
                }
            </div>
        </div>

    </div>

}