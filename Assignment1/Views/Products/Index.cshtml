
@model IEnumerable<Assignment1.Models.Products>
@{
    ViewData["Title"] = "Products";
}


@section header{

    <div class="Incidents-container p-3">
        <div class="box Pro">
            <span></span>
            <div class="content">
                <h1>@ViewBag.message</h1>
                <h2> Product Manager</h2>
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" table-striped style="width:100%">
                        <thead>
                            <tr>
                                <th><p>CODE</p></th>
                                <th><p>NAME</p></th>
                                <th><p>PRICE</p></th>
                                <th><p>RELEASE DAY</p></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Code</td>
                                    <td>@obj.PName</td>
                                    <td>$@obj.Price</td>
                                    <td>@obj.Rdate.ToShortDateString() </td>
                                    <td class=" text-center">
                                        <div>
                                            <a asp-controller="Products" asp-route-Id="@obj.ProductsId" asp-action="Edit" class="btn btn-outline-primary">Edit</a>

                                        </div>
                                    </td>
                                    <td class=" text-center">
                                        <div>

                                            <a asp-controller="Products" asp-route-Id="@obj.ProductsId" asp-action="Delete" class="btn btn-outline-danger ">Delete</a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-6 ">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-outline-success">
                            Add Product
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>



}