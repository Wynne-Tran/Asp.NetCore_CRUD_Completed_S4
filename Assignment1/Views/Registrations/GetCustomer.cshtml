@model IEnumerable<Assignment1.Models.Registrations>
@{
    string title = "Registration";
    ViewBag.Title = title;
}
@section header{
    <div class="Incidents-container p-3">
        <h1>@ViewBag.name</h1>
        <h2>Get Customer</h2>
        <div class="box Reg">
            <span></span>
            <div class="content">
                <h1>@ViewBag.error</h1>
                <form method="get">
                    <div class="form-group row ">
                        <div class="m-5 w-100">
                            <select name="CustomersId" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Customers, "CustomersId", "FullName"))">
                                <option value="">Select a Customer</option>
                            </select>    
                        </div>

                        <div class="form-group row">
                            <div class="col-5 offset-4 row">
                                <table class="col-5 offset-4 row">
                                    <tr class="col-5">
                                        <td><input type="submit" asp-action="" class="btn btn-outline-warning border-success text-right" value="Select"></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
